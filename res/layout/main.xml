<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    >
     <ScrollView 
    	android:id="@+id/ScrollView01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
		<LinearLayout 
			xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
	    >
		    <TextView  
		   		android:id="@+id/textViewUeberschrift"
		    	style="@style/TextStyleUeberschrift"
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content" 
		    	android:text="@string/startseiteIntro"
		    />
		    <Button 
		    	android:id="@+id/buttonBmiBerechnen"
		    	android:text="@string/buttonBmiBerechnen"
		    	android:onClick="onClickButtonBmiBerechnen"
		    	style="@style/Schaltflaeche"
		    />
		    <ImageView
		    	xmlns:android="http://schemas.android.com/apk/res/android"
			    style="@style/StyleSeparator"
		    />
		    <Button 
		    	android:id="@+id/buttonGewichtEingeben"
		    	android:text="@string/buttonGewichtEingeben"
		    	android:onClick="onClickButtonGewichtEingeben"
		    	style="@style/Schaltflaeche"
		    />
		    <Button 
		    	android:id="@+id/buttonGewichtBearbeiten"
		    	android:text="@string/buttonGewichtBearbeiten"
		    	android:onClick="onClickButtonGewichtBearbeiten"
		    	style="@style/Schaltflaeche"
		    />
		    <Button 
		    	android:id="@+id/buttonGraphAnzeigen"
		    	android:text="@string/buttonGraphAnzeigen"
		    	android:onClick="onClickButtonGraphAnzeigen"
		    	style="@style/Schaltflaeche"
		    />
		    <ImageView
		    	xmlns:android="http://schemas.android.com/apk/res/android"
			    style="@style/StyleSeparator"
		    />
		    <Button 
		    	android:id="@+id/buttonEinstellungen"
		    	android:text="@string/buttonEinstellungen"
		    	android:onClick="onClickButtonEinstellungen"
		    	style="@style/Schaltflaeche"
		    />
		    <ImageView 
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center_horizontal"
		    	android:src="@drawable/ic_launcher"
		    />
	    </LinearLayout>
	</ScrollView>	    
</LinearLayout>
